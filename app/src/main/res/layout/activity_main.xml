<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="8dp"
    tools:context="com.example.saifu.calculatoriak.MainActivity">

    <TextView
        android:id="@+id/tv_calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textColor="#fff"
        android:textSize="50sp"
        android:layout_centerHorizontal="true" />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_below="@id/tv_calculator" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:textColorHint="#fff"
        android:layout_marginTop="16dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_input_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/input1"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:layout_below="@id/text_input_layout1"
            android:layout_centerHorizontal="true" >
        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_below="@id/text_input_layout1"
        android:textColorHint="#fff"
        android:layout_marginTop="16dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_input_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/input2"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:layout_below="@id/text_input_layout1"
            android:layout_centerHorizontal="true">
        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/count"
        android:layout_below="@id/text_input_layout2"
        android:layout_marginTop="16dp"
        android:textColor="#fff"
        android:shadowColor="@color/colorAccent"
        android:background="@drawable/garis_tepi"/>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_above="@id/tv_result_division"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/tv_result_division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_above="@id/tv_result_multiplication"/>
    <TextView
        android:id="@+id/tv_result_multiplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_above="@id/tv_result_minus"/>
    <TextView
        android:id="@+id/tv_result_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_above="@id/tv_result_plus"/>
    <TextView
        android:id="@+id/tv_result_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>
